# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.railway.app/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# Gemini API
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_TIMEOUT=600

# PostgreSQL (Railway автоматически подставит через ${{Postgres.DATABASE_URL}})
# Для Railway используйте: ${{Postgres.DATABASE_URL}}
# Для локальной разработки:
DATABASE_URL=postgresql://user:password@localhost:5432/nano_banana

# Redis (Railway автоматически подставит через ${{Redis.REDIS_URL}})
# Для Railway используйте: ${{Redis.REDIS_URL}}
# Для локальной разработки:
REDIS_URL=redis://localhost:6379/0

# ЮКасса
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
YOOKASSA_WEBHOOK_SECRET=your_webhook_secret
YOOKASSA_WEBHOOK_URL=https://your-domain.railway.app/webhook/yookassa

# API Server
API_HOST=0.0.0.0
PORT=8080

# Админы (через запятую)
ADMIN_IDS=123456789,987654321

# Логирование
LOG_LEVEL=INFO

# S3 (опционально)
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=
